<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="592dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:accessibilityLiveRegion="none"
                app:cardBackgroundColor="#2196F3"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btniq2s"
                        android:layout_width="313dp"
                        android:layout_height="475dp"
                        android:background="#00FFFFFF"
                        android:contentDescription="5712"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/p" />

                    <TextView
                        android:id="@+id/txtig2s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isekai Quartet 2nd Season"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:accessibilityLiveRegion="none"
                app:cardBackgroundColor="@color/colorfondo"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btndhd"
                        android:layout_width="313dp"
                        android:layout_height="475dp"
                        android:background="@color/colorfondo"
                        android:contentDescription="5713"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/doro" />

                    <TextView
                        android:id="@+id/txtdhd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dorohedoro"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:accessibilityLiveRegion="none"
                app:cardBackgroundColor="@color/colorfondo"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnA3s"
                        android:layout_width="313dp"
                        android:layout_height="475dp"
                        android:background="@color/colorfondo"
                        android:contentDescription="5711"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/a3" />

                    <TextView
                        android:id="@+id/txtA3s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A3! Season Spring &amp; Summer"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>